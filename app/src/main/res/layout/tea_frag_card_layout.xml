<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:color = "@color/lightGrey"
>
    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_thumbnail_image"
        android:layout_alignParentRight="true"
        android:layout_width="270dp"
        android:layout_height="270dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="32dp"
        android:paddingLeft="8dp"
        android:textColor="@color/action_bar_background"
        android:lines="1"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/time_prep"
        android:textSize="18sp"
        android:layout_marginLeft="10dp"
        android:textColor="@color/text_standard_color"
        android:textStyle = "italic"
        android:lines="1"
        android:layout_below="@id/title"
        android:layout_toLeftOf= "@id/card_thumbnail_image"
        android:layout_alignParentLeft="true"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:textSize="80dp"
        android:textColor="@color/action_bar_background"
        android:paddingBottom = "15dp"
        android:paddingLeft = "10dp"
        android:paddingTop="25dp"
        android:layout_below = "@id/time_prep"
     />

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/buttonflat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/action_bar_background"
        android:text="Button"
        android:layout_below="@+id/price"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
    />

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/buttonflat2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/action_bar_background"
        android:text="Button2"
        android:layout_alignTop="@+id/buttonflat3"
        android:layout_toRightOf="@+id/buttonflat"
        android:layout_toEndOf="@+id/buttonflat"
    />

    <com.gc.materialdesign.views.ButtonFlat
        android:id="@+id/buttonflat3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/action_bar_background"
        android:text="Button3"
        android:layout_below="@+id/price"
        android:layout_toRightOf="@+id/buttonflat2"
        android:layout_toEndOf="@+id/buttonflat2"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clickme"
        android:textSize="18sp"
        android:textColor="@color/lightBrown"
        android:paddingLeft = "8dp"
        android:paddingTop="15dp"
        android:text="Click me for more details"
        android:layout_below="@+id/buttonflat"
        android:layout_alignLeft="@+id/buttonflat"
        android:layout_alignStart="@+id/buttonflat"
     />
</RelativeLayout>

