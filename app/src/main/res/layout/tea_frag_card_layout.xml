<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:color = "@color/lightGrey"
>

    <ImageView
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/card_thumbnail_image"
        android:layout_alignParentRight="true"
        android:layout_width="270dp"
        android:layout_height="270dp"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/title"
        android:textSize="32dp"
        android:layout_marginLeft="9dp"
        android:textColor="@color/text_standard_color"
        android:lines="1"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/section_layout"
        android:textSize="18sp"
        android:layout_marginLeft="12dp"
        android:textColor="@color/text_standard_color"
        android:lines="1"
        android:layout_below="@id/title"
        android:layout_toLeftOf= "@id/card_thumbnail_image"
        android:layout_alignParentLeft="true"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/calories_layout"
        android:layout_below = "@id/section_layout"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft = "12dp"
        android:textSize="18sp"
        android:textColor="@color/text_standard_color"
        android:layout_alignLeft="@+id/card_thumbnail_image"
        android:layout_alignStart="@+id/card_thumbnail_image"
     />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/price"
        android:paddingTop = "12dp"
        android:textSize="80dp"
        android:layout_below = "@id/calories_layout"
        android:layout_marginLeft = "12dp"
        android:textColor="@color/text_standard_color"
    />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/clickme"
        android:textSize="18sp"
        android:textColor="@color/lightBrown"
        android:lines="1"
        android:paddingLeft = "12dp"
        android:paddingTop="32dp"
        android:layout_below = "@id/price"
        android:text="Click me for more details"
    />

</RelativeLayout>

