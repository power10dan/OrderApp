<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id = "@+id/layout_button"
>
    <!-- Refactored layout for buttons -->
    <include layout="@layout/tea_customization_options_button_layout"
             android:layout_width = "wrap_content"
             android:layout_height = "wrap_content"
             android:id = "@+id/buttons"
    />

    <TextView
        android:id="@+id/option_user_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize = "50dp"
        android:textColor = "@color/text_standard_color"
        android:gravity = "right"
        android:layout_weight = "1"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/buttons"
        android:layout_toEndOf="@+id/buttons"
     />
</RelativeLayout>
