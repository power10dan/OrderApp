<resources>

    <!-- Base application theme. -->
    <style name="CustomActionBar" parent="AppBaseTheme">

    </style>

    <style name="AppBaseTheme"
        parent="@style/Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/White</item> <!-- Start up background color -->
        <item name="colorPrimary">#E77C2A</item> <!-- color of indicator on tabs -->
        <item name="colorPrimaryDark">#E77C2A</item>
        <item name = "android:textColorPrimary">@android:color/white</item>

    </style>

    <style name="Birth.card.content_outer_layout" parent="@style/card.content_outer_layout">
        <!--Style for Content View-->
        <item name="android:minHeight">60dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/card_content_outer_view_margin_top</item>
        <item name="android:layout_marginLeft">@dimen/card_content_outer_view_margin_left</item>
        <item name="android:layout_marginRight">@dimen/card_content_outer_view_margin_right</item>
    </style>

    <style name="customization_card_main_inner_title">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@android:color/black</item>
        <item name="android:layout_marginTop">2dp</item>
    </style>
</resources>
